<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5C8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pendaftaran Sekolah"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="150dp"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BERKAS PENDUKUNG"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#000000"
                    android:layout_marginBottom="16dp"/>

                <!-- Foto Diri -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Foto Diri (Latar Merah/Biru)"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/et_foto_diri"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/btn_foto_diri"
                        android:background="@drawable/edit_text_bg"
                        android:padding="12dp"
                        android:hint="Masukkan Foto Diri"
                        android:focusable="false"
                        android:clickable="false"/>

                    <Button
                        android:id="@+id/btn_foto_diri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Pilih Foto"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="@color/red"/>
                </RelativeLayout>

                <!-- KTP/KIA -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="KTP/KIA"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/et_ktp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/btn_ktp"
                        android:background="@drawable/edit_text_bg"
                        android:padding="12dp"
                        android:text="Masukkan Foto KTP"
                        android:focusable="false"
                        android:clickable="false"/>

                    <Button
                        android:id="@+id/btn_ktp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Pilih Foto"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="@color/red"/>
                </RelativeLayout>

                <!-- Akta Kelahiran -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Akta Kelahiran"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/et_akta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/btn_akta"
                        android:background="@drawable/edit_text_bg"
                        android:padding="12dp"
                        android:hint="Masukkan Foto Akta Kelahiran"
                        android:focusable="false"
                        android:clickable="false"/>

                    <Button
                        android:id="@+id/btn_akta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Pilih Foto"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="@color/red"/>
                </RelativeLayout>

                <!-- Kartu Keluarga -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kartu Keluarga"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/et_kk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="11dp"
                        android:layout_toLeftOf="@+id/btn_kk"
                        android:background="@drawable/edit_text_bg"
                        android:clickable="false"
                        android:focusable="false"
                        android:hint="Masukkan Foto Kartu Keluarga"
                        android:padding="12dp" />

                    <Button
                        android:id="@+id/btn_kk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Pilih Foto"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="@color/red"/>
                </RelativeLayout>

                <!-- Ijazah/SKL -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ijazah/SKL"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/et_ijazah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/btn_ijazah"
                        android:background="@drawable/edit_text_bg"
                        android:padding="12dp"
                        android:hint="Masukkan Foto Ijazah/SKL"
                        android:focusable="false"
                        android:clickable="false"/>

                    <Button
                        android:id="@+id/btn_ijazah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Pilih Foto"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="@color/red"/>
                </RelativeLayout>

                <!-- KTP Orang Tua -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="KTP Orang Tua"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/et_ktp_ortu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/btn_ktp_ortu"
                        android:background="@drawable/edit_text_bg"
                        android:padding="12dp"
                        android:hint="Masukkan Foto KTP Orang Tua"
                        android:focusable="false"
                        android:clickable="false"/>

                    <Button
                        android:id="@+id/btn_ktp_ortu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Pilih Foto"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="@color/red"/>
                </RelativeLayout>

                <!-- KIP (Jika Ada) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="KIP (Jika Ada)"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/et_kip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/btn_kip"
                        android:background="@drawable/edit_text_bg"
                        android:padding="12dp"
                        android:hint="Masukkan Foto KIP (Opsional)"
                        android:focusable="false"
                        android:clickable="false"/>

                    <Button
                        android:id="@+id/btn_kip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Pilih Foto"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="@color/red"/>
                </RelativeLayout>

                <!-- Upload Berkas -->
                <Button
                    android:id="@+id/btn_upload_berkas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Berkas"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="@color/red"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
