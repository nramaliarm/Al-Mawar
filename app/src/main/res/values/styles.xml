<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/flashscreen</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/flashscreen</item>
        <item name="android:windowNoTitle">true</item> <!-- Hilangkan Title Bar -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">true</item> <!-- Ini biar icon aplikasi gak muncul -->
    </style>

    <style name="DetailText">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/cardview</item>
    </style>


</resources>